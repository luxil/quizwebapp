doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Quiz Erstellen
        link(rel='stylesheet', href='css/quizmaster.css')
        // Bootstrap
        link(href='css/bootstrap.min.css', rel='stylesheet')
        script(src='js/quizmaster1.js')
        script(src='/socket.io/socket.io.js')
        script(src='https://cdn.socket.io/socket.io-1.2.0.js')
        script(src='http://code.jquery.com/jquery-1.11.1.js')
        script(src='//code.jquery.com/ui/1.11.4/jquery-ui.js')
    body(onload='quiz()')
    .container-fluid
        .row
            .col-lg-2
            .col-xs-12.col-lg-8
                p ID eingeben:
                    input#id(type='text')
                    button#connect(type='submit') Verbinden
        .row
            .col-lg-2
            .col-xs-12.col-lg-8
                p#questions Fragen
                    ul#liste
    .container-fluid
        .row
            .col-lg-2
            .col-xs-12.col-lg-8
                #add
                    p Frage eingeben:
                    input#frage(type='text', value="Frage")
                    input#antwort(type='text', value="Antwort")
                    input#falsch1(type='text', value="Falsche Antwort 1")
                    input#falsch2(type='text', value="Falsche Antwort 2")
                    input#falsch3(type='text', value="Falsche Antwort 3")
                    button#addFrage(type='submit') Add
    .container-fluid
        .row
            .col-lg-2
            .col-xs-12.col-lg-8
                #players Mitspieler
                    #player
        .row
            .col-lg-2
            .col-xs-12.col-lg-8
                button#go(type='submit') Quiz starten
                button#reset(type='submit') Reset
